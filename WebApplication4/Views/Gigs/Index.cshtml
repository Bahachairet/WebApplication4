@model IEnumerable<Gigs>
@{
    ViewData["Title"] = "List of Gigs";
}

<div class="row">
   @foreach (var item in Model)
  {
      <div class="container">
    <div class="card mb-3" style="max-width: 450px;">
        <div class="card-img-wrapper">
        <img  src="@item.Gigphotos" class="card-img-top" alt="..." 
        style="object-fit: cover;">
       
    </div>
        <div class="card-body">
            <h5 class="card-title">@item.Gigusername</h5>
          <h5 class="card-title">@item.Gigtitle</h5>
          

          <p class="card-text">@item.Gigabout</p>
          
          <div class="col-md-12">
              <div class="card-footer">
                  <p class="card-text">
                      <a class="btn btn-outline-primary float-right"> <i class="bi bi-eye-fill"></i> Show Details </a>

                      <a class="btn btn-success text-white float-left "> <i class="bi bi-cart-plus"></i> Add to Cart @item.Gigprice.ToString("c") </a>

                 </p>
              </div>
          </div>
           
           

        </div>
      </div>
    </div>
      
  }


</div>